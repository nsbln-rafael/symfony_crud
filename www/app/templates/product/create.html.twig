{% extends 'base.html.twig' %}

{% block title %}Создание продукта{% endblock %}

{% block body %}
    <div class="container">
        <h2 class="text-center mt-5 mb-3">Создание продукта</h2>
        <div class="card">
            <div class="card-header">
                <a class="btn btn-outline-info float-right" href="{{ path('app_product_show') }}">
                    Все продукты
                </a>
            </div>
            <div class="card-body">
                {{ form_start(form) }}
                    <div class="form-group">
                        {{ form_row(form.formName, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.formPrice, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <button class="btn {{ button_color|default('btn-outline-primary') }}  mt-3">
                        {{ button_label|default('Сохранить') }}
                    </button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}